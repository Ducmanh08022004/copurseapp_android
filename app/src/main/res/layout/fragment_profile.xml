<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:src="@drawable/ic_person"
        app:shapeAppearanceOverlay="@style/CircularShapeAppearance"
        app:strokeColor="@color/colorPrimaryTheme"
        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Nguyen Van A"
        android:textColor="@color/colorPrimaryTheme"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="nguyenvana@email.com"
        android:textSize="16sp" />

    <Button
        android:id="@+id/editProfileButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Chỉnh sửa thông tin"
        android:textColor="@color/colorPrimaryTheme"
        app:strokeColor="@color/colorPrimaryTheme"/>

    <Button
        android:id="@+id/orderHistoryButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lịch sử đơn hàng"
        android:textColor="@color/colorPrimaryTheme"
        app:strokeColor="@color/colorPrimaryTheme" />

    <Button
        android:id="@+id/logoutButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đăng xuất"
        android:backgroundTint="@color/colorPrimaryTheme"
        android:textColor="?attr/colorOnError"/>

</LinearLayout>